<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.blogspot.diegopacheco.sandbox.java</groupId>
	<artifactId>rest-cxf-kid</artifactId>
	<name>rest-cxf-kid</name>
	<version>1.0-SNAPSHOT</version>
	<description>rest-cxf-kid</description>
	<packaging>war</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<inherited>true</inherited>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.4.1</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>${jboss.home}/server/default/data</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>${jboss.home}/server/default/log</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>${jboss.home}/server/default/work</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<fileset>
							<directory>${jboss.home}/server/default/tmp</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>		
						<fileset>
							<directory>${jboss.home}/server/default/deploy</directory>
							<includes>
								<include>**/rest-cxf-kid-1.0-SNAPSHOT.war</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<properties>
		<jboss.home>D:/Diego/Java/bin/jboss-5.1.0.GA-jdk6</jboss.home>
		<spring.version>5.2.7.RELEASE</spring.version>
		<cxf.version>2.2.9</cxf.version>
	</properties>

